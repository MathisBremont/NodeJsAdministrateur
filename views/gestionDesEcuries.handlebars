<div class="enTeteAdmin">
    <img src="/image/cat_ecurie.png" alt="logo"/>
    <h1>Gestion des écuries</h1>
    <a href="/ajouterEcurie"><img src="image/act_add.png"/> Ajouter une écurie</a>
</div>

<table class="tableauxGestion">
    <tr>
        <th>Nom</th>
        <th>Directeur</th>
        <th>Points</th>
        <th>Actions</th>
    </tr>
    {{#each detailEcurie}}
        <tr>
            <td>{{this.ecunom}}</td>
            <td>{{this.ecunomdir}}</td>
            <td>{{this.ecupoints}}</td>
            <td><a href=""><img src="/image/act_edit.png" alt="edit"/> Modifier</a>  <a href=""><img src="/image/act_delete.png" alt="delete"/> Supprimer</a></td>
        </tr>
    {{/each}}
</table>
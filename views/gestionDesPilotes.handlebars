<div class="enTeteAdmin">
    <img src="/image/cat_pilote.png" alt="logo"/>
    <h1>Gestion des pilotes</h1>
    <a href="/ajouterPilote"><img src="image/act_add.png"/> Ajouter un pilote</a>
</div>

<table class="tableauxGestion">
    <tr>
        <td><b>Nom</b></td>
        <td><b>Pr√©nom</b></td>
        <td><b>Date de naissance</b></td>
        <td><b>Actions</b></td>
    </tr>
    {{#each listePilotes}}
        <tr>
            <td>{{this.pilnom}}</td>
            <td>{{this.pilprenom}}</td>

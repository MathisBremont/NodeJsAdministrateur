<form action="/ajouterCircuit" method="post">


                <h1>Ajouter un circuit</h1>


                    Nom <input type="text" class="login-field" name ="cirnom" value="">
                    Longueur <input type="number" class="login-field" name ="cirlongueur" value="" min="1" max="100000">

                   Pays <select name="paynum">
                            <option selected="selected" value
                            {{#each listePays}}
                                <option value={{this.paynum}}>{{this.paynom}}</option>
                            {{/each}}
                        </select>
                   Image <input type="file" class="login-field" name ="ciradresseimage" value="" accept="image/png, image/jpeg" maxlength="
                   20">


                   Nombre de spectateurs <input type="text" class="login-field" name ="cirnbspectateurs" value="">
                   Description <input type="text" class="login-field" name ="cirtext" value="">


                <input type="submit" name="inscription" class="" value="Ajouter">

</form>